pipeline {
    agent any

    stages {
        stage('Checkout') {
                git 'https://github.com/RicardoMPires/DevOps-23-24--PSM-1231857-.git'
            }
        }

        stage('Assemble') {
            steps {
                sh './CA2/Part1/gradle_basic_demo/gradle assemble'
            }
        }

        stage('Test') {
            steps {
                sh './gradle test'
            }
            post {
                always {
                    junit '**/build/test-results/**/*.xml'
                }
            }
        }

        stage('Archive') {
            steps {
                // This will archive the JAR file in Jenkins
                archiveArtifacts artifacts: '**/build/libs/*.jar', fingerprint: true
            }
        }
    }
}